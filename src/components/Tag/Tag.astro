---
import { slugify, humanize } from "@js/textUtils";

interface Props {
  tag: string;
  class?: string;
  showCount?: boolean;
  count?: number;
}

const { tag, class: className, showCount, count } = Astro.props as Props;
---

<a
  href={`/tags/${slugify(tag)}/`}
  class:list={[
    "inline-block border border-primary-600 px-2 py-0.5 transition-colors hover:text-primary-600",
    className,
  ]}
>
  #{humanize(tag)}
  {showCount && <span class="description text-xs">({count})</span>}
</a>
