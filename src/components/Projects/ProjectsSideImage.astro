---
/**
 * * These are alternating side cards with titles, text, and images
 * Recommend using 2 or 3 cards in a row
 */

// components
import ProjectCard from "@components/ProjectCard/ProjectCardSideImage.astro";

// data
import projectData from "@config/projectData.json";
---

<section id="projects" class="container">
  <div class="mx-auto max-w-lg md:max-w-full">
    <div class="mt-20 grid gap-4 gap-y-12 md:mt-28">
      {
        projectData.map((project, idx) => (
          <ProjectCard
            {...project}
            imageSide={idx % 2 === 0 ? "left" : "right"}
          />
        ))
      }
    </div>
  </div>
</section>
