---
/**
 * * Hero with socials and small profile image above
 */
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

// components
import Button from "@components/Button/Button.astro";
import SocialCloud from "@components/SocialCloud/SocialCloud.astro";

// data
import siteData from "@config/siteData.json";

import heroImage from "@assets/images/web-reaper.jpg";
---

<section id="hero" class="relative flex w-full pb-6">
  <!-- hero items -->
  <div
    class="container grid items-center gap-10 pt-36 md:grid-cols-3 md:gap-20"
  >
    <!-- Hero text -->
    <div class="mx-auto max-w-lg md:col-span-2 md:ml-0 md:max-w-full">
      <div class="size-24 overflow-hidden">
        <Image
          src={heroImage}
          class="object-cover"
          alt="web reaper profile"
          loading="eager"
          width={100}
          densities={[1.5, 2]}
          data-aos="fade-in"
        />
      </div>
      <h1 class="h1 mt-8" data-aos="fade-in" data-aos-delay=".4">
        Hi, I'm {siteData.author.name}
      </h1>
      <p
        class="description mt-4 text-pretty"
        data-aos="fade-in"
        data-aos-delay=".6"
      >
        I program the programming program that other programmers use to program
        programs. Python Steering Council and core developer. Python 3.10/3.11
        release manager. Deals with black holes and parsers. Attracts linker
        problems.
      </p>
      <div class="mt-8 flex gap-4" data-aos="fade-in" data-aos-delay="1.2">
        <SocialCloud />
      </div>
    </div>

    <!-- hero image -->
    <!-- <div class="mx-auto max-w-sm md:col-span-1 md:max-w-full">
      <Image
        src={heroImage}
        class="aspect-square w-full"
        alt="web reaper profile"
        loading="eager"
        width={600}
        densities={[1.5, 2]}
        data-aos="fade-in"
        data-aos-delay=".6"
      />
    </div> -->
  </div>
</section>
