---
/**
 * * These are alternating side cards with titles, text, and images
 * Recommend using 2 or 3 cards in a row
 */

// components
import ProjectCard from "@components/TalkCard/TalkCardVertical.astro";

// data
import talkData from "@config/talkData.json";

// Sort talks by date in descending order (newest first)
const sortedPosts = [...talkData].sort((a, b) => b.date.getTime() - a.date.getTime());
---

<section id="projects" class="container">
  <div class="mx-auto max-w-lg md:max-w-full">
    <div class="mt-20 grid gap-x-4 gap-y-8 md:mt-28 md:grid-cols-2">
      {sortedPosts.map((talk) => <ProjectCard {...talk} />)}
    </div>
  </div>
</section>